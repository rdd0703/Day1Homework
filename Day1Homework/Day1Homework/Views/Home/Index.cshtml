@{
    ViewBag.Title = "Home Page";
}


<div class="well">
    <form class="form-horizontal">
        <div class="form-group">
            @Html.Label("類別",new { @class= "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.DropDownList("category", (List<SelectListItem>)ViewBag.CategoryItems, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("金額", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" id="money" placeholder="金額">
            </div>
        </div>
        <div class="form-group">
            @Html.Label("日期", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <input type="text" class="form-control" id="date" placeholder="日期">
            </div>
        </div>
        <div class="form-group">
            @Html.Label("備註", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <textarea class="form-control" id="description"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    </form>
</div>

@Html.Action("GridViewAction")